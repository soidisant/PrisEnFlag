# Prevent caching of HTML files - always check for updates
/
  Cache-Control: no-cache, no-store, must-revalidate
/index.html
  Cache-Control: no-cache, no-store, must-revalidate

# Cache hashed assets for 1 year (Vite adds hash to filename)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache data files for 1 hour (they might be updated)
/data/*
  Cache-Control: public, max-age=3600
